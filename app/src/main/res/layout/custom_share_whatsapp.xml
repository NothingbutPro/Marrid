<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:gravity="center_horizontal"
    >
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="normal"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:textColor="@color/colorAccent2"
        android:text="Please Selected Whatsapp"
        />
    <Button
        android:layout_marginTop="8sp"
        android:id="@+id/normail_whatsapp"
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:gravity="center"

        android:layout_gravity="center_horizontal"
        android:background="@drawable/edit_text1"
        android:textColor="@android:color/white"
        android:text="Normail Whatsapp User"
        android:textSize="10sp"
        />
    <Button
        android:layout_marginTop="10sp"
        android:id="@+id/business_whatsapp"
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/edit_text1"
        android:textColor="@android:color/white"
        android:text="Business Whatsapp User"
        android:textSize="10sp"
        />


</LinearLayout>