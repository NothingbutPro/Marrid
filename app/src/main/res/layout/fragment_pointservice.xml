    <LinearLayout
        android:id="@+id/liner1"
        android:layout_width="match_parent"
        android:layout_height="90dp">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:minWidth="1dp"
                >
                <ImageView
                    android:id="@+id/meem_logo"
                    android:layout_width="140dp"
                    android:layout_height="190dp"
                    android:layout_weight="1"
                    android:src="@drawable/logo"
                    android:scaleType="centerInside"
                    />
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_notifications_none_black"
                    android:layout_toLeftOf="@+id/ic_menu4"
                    android:layout_centerVertical="true"
                    />
                <ImageView
                    android:id="@+id/ic_menu4"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_dehaze_black"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    />

                <TextView
                    android:id="@+id/tx_heading"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Global Online Services"
                    android:textSize="15dp"
                    android:textColor="@color/colorAccent5"
                    android:textStyle="bold"
                    android:textAlignment="textEnd"
                    android:layout_gravity="end"
                    android:layout_alignParentBottom="true"
                    android:layout_toEndOf="@+id/meem_logo"
                    android:layout_toRightOf="@+id/meem_logo"
                    />

            </RelativeLayout>
        </androidx.appcompat.widget.Toolbar>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_below="@+id/liner1"
        >

        <View
            android:id="@+id/view2"
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:background="#000100"
            android:layout_below="@+id/liner1"
            />
        <LinearLayout
            android:id="@+id/liner3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_weight="0.1"
            android:orientation="horizontal"
            >
            <com.smarteist.autoimageslider.SliderView
                android:id="@+id/imageSlider_pointservices"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                app:sliderAnimationDuration="600"
                app:sliderAutoCycleDirection="right"
                app:sliderAutoCycleEnabled="true"
                app:sliderCircularHandlerEnabled="true"
                app:sliderIndicatorAnimationDuration="600"
                app:sliderIndicatorGravity="center_horizontal|bottom"
                app:sliderIndicatorMargin="15dp"
                app:sliderIndicatorOrientation="horizontal"
                app:sliderIndicatorPadding="3dp"
                app:sliderIndicatorRadius="2dp"
                app:sliderIndicatorSelectedColor="#ff000000"
                app:sliderIndicatorUnselectedColor="#ff000000"
                app:sliderScrollTimeInSec="1"
                app:sliderStartAutoCycle="true"/>
        </LinearLayout>

