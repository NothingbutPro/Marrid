<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/liner1"
        android:layout_width="match_parent"
        android:layout_height="90dp">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:minWidth="1dp"
                >
                <ImageView
                    android:id="@+id/meem_logo"
                    android:layout_width="140dp"
                    android:layout_height="190dp"
                    android:layout_weight="1"
                    android:src="@drawable/logo"
                    android:scaleType="centerInside"
                    />
                <ImageView
                    android:id="@+id/notification"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_notifications_none_black"
                    android:layout_toLeftOf="@+id/ic_menu2"
                    android:layout_centerVertical="true"
                    />
                <ImageView
                    android:id="@+id/ic_menu2"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_dehaze_black"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    />

                <TextView

                    android:id="@+id/tx_heading"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Muslim Matrimony Global Service"
                    android:textSize="15dp"
                    android:textColor="@color/colorAccent5"
                    android:textStyle="bold"
                    android:textAlignment="textStart"
                    android:layout_gravity="start"
                    android:layout_alignParentBottom="true"
                    android:layout_toEndOf="@+id/meem_logo"
                    android:layout_toRightOf="@+id/notification"
                    />

            </RelativeLayout>
        </androidx.appcompat.widget.Toolbar>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_below="@+id/liner1"
        >

        <View
            android:id="@+id/view2"
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:background="@color/colorAccent2"
            android:layout_below="@+id/liner1"
            />
        <LinearLayout
            android:id="@+id/liner3"
            android:layout_weight="0.1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <com.smarteist.autoimageslider.SliderView
                android:id="@+id/imageSlider_matrimony"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                app:sliderAnimationDuration="600"
                app:sliderAutoCycleDirection="right"
                app:sliderAutoCycleEnabled="true"
                app:sliderCircularHandlerEnabled="true"
                app:sliderIndicatorAnimationDuration="600"
                app:sliderIndicatorGravity="center_horizontal|bottom"
                app:sliderIndicatorMargin="15dp"
                app:sliderIndicatorOrientation="horizontal"
                app:sliderIndicatorPadding="3dp"
                app:sliderIndicatorRadius="2dp"
                app:sliderIndicatorSelectedColor="#EB79D1"
                app:sliderIndicatorUnselectedColor="#EB79D1"
                app:sliderScrollTimeInSec="1"
                app:sliderStartAutoCycle="true" />

        </LinearLayout>

        <View
            android:id="@+id/view4"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="3dp"
            android:background="@color/colorAccent2"
            />
        <androidx.cardview.widget.CardView
            android:id="@+id/cartview1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:layout_margin="0dp"
            app:cardElevation="5dp"
            >
            <LinearLayout
                android:weightSum="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:gravity="center"
                >
                <LinearLayout

                    android:id="@+id/liner2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:orientation="horizontal"
                    android:padding="10dp"
                    android:layout_gravity="center"
                    >
                    <LinearLayout
                        android:id="@+id/matri_li_id"
                        android:layout_width="match_parent"
                        android:layout_height="fill_parent"
                        android:orientation="vertical"
                        android:layout_weight="1"
                        android:paddingTop="0dp"
                        android:paddingLeft="5dp"
                        android:layout_gravity="center"
                        android:gravity="center"
                        >
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">


                        <ImageView
                            android:id="@+id/tx_images11"
                            android:layout_width="80dp"
                            android:layout_height="70dp"
                            android:layout_gravity="center"
                            android:scaleType="fitXY"
                            android:src="@drawable/matrimony_profile"/>

                        <ImageView
                            android:visibility="gone"
                            android:id="@+id/matri_dot"
                            android:layout_alignRight="@+id/tx_images11"
                            android:layout_alignBottom="@+id/tx_images11"
                            android:src="@drawable/reddot"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                        </ImageView>
                    </RelativeLayout>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Matching Profiles"
                            android:textColor="@color/colorAccent2"
                            android:textAlignment="center"
                            android:textSize="7pt"
                            />
                    </LinearLayout>

                    <View
                        android:layout_width="0.70dp"
                        android:layout_height="match_parent"
                        android:background="@color/colorAccent2"
                        />
                    <LinearLayout
                        android:id="@+id/interest_li"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:paddingTop="0dp"
                        android:paddingRight="5dp"
                        android:paddingLeft="5dp"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:layout_weight="1">
                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                        <ImageView

                            android:padding="2dp"
                            android:id="@+id/tx_images22"
                            android:layout_width="98dp"
                            android:layout_height="70dp"
                            android:src="@drawable/matrimony_matching"
                            android:layout_gravity="center"
                            android:scaleType="centerInside"/>
                            <ImageView
                                android:visibility="gone"
                                android:id="@+id/interest_dot"
                                android:layout_alignRight="@+id/tx_images22"
                                android:layout_alignBottom="@+id/tx_images22"
                                android:src="@drawable/reddot"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">

                            </ImageView>
                        </RelativeLayout>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Intrested Profiles"
                            android:textAlignment="center"
                            android:textSize="8pt"
                            android:textColor="@color/colorAccent2"/>
                    </LinearLayout>
                </LinearLayout>
                <View
                    android:id="@+id/view1"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/colorAccent6"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:orientation="horizontal"
                    android:padding="4dp"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:paddingTop="8dp"
                        android:paddingRight="5dp"
                        android:paddingLeft="5dp"
                        android:layout_gravity="center"
                        android:gravity="center"
                        >
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:id="@+id/tx_images33"
                            android:layout_width="80dp"
                            android:layout_height="70dp"
                            android:layout_gravity="center"
                            android:scaleType="centerInside"
                            android:src="@drawable/matrimony_notfication" />

                        <ImageView
                            android:visibility="gone"
                            android:id="@+id/noti_dot"
                            android:layout_alignRight="@+id/tx_images33"
                            android:layout_alignBottom="@+id/tx_images33"
                            android:src="@drawable/reddot"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                        </ImageView>

                    </RelativeLayout>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Notifications"
                            android:textAlignment="center"
                            android:textSize="7pt"
                            android:textColor="@color/colorAccent2" />
                    </LinearLayout>

                    <View
                        android:layout_width="0.70dp"
                        android:layout_height="match_parent"
                        android:background="@color/colorAccent6"
                        />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:layout_weight="1"
                        android:paddingTop="8dp"
                        android:paddingRight="5dp"
                        android:paddingLeft="5dp"
                        android:layout_gravity="center"
                        android:gravity="center"
                        >
                        <ImageView
                            android:id="@+id/tx_images44"
                            android:layout_width="80dp"
                            android:layout_height="70dp"
                            android:scaleType="centerInside"
                            android:src="@drawable/matrimony_share"
                            android:layout_gravity="center" />
                        <TextView

                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Share my Profile"
                            android:textAlignment="center"
                            android:textSize="7pt"
                            android:textColor="@color/colorAccent2"/>
                    </LinearLayout>
                </LinearLayout>


            </LinearLayout>

        </androidx.cardview.widget.CardView>

